<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:paddingBottom="@dimen/dp_10"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  style="@style/margin_16"
                  android:orientation="horizontal"
                  android:layout_height="90dp">
        <TextView
                android:id="@+id/tv_item_home_recruit"
                android:text="商家招聘"
                android:drawableTop="@mipmap/jft_but_businessrecruitment"
                style="@style/item_home_tag"/>
        <TextView style="@style/item_home_tag"
                  android:drawableTop="@mipmap/jft_but_merchantservice"
                  android:text="商家服务"
                  android:id="@+id/tv_item_home_server"
        />
        <TextView style="@style/item_home_tag"
                  android:drawableTop="@mipmap/jft_but_businessinformation"
                  android:text="商业咨询"
                  android:id="@+id/tv_item_home_infom"
        />
        <TextView style="@style/item_home_tag"
                  android:text="地图红包"
                  android:id="@+id/tv_item_home_money"
                  android:drawableTop="@mipmap/jft_but_mapredenvelopes"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  style="@style/margin_16"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_height="@dimen/dp_200">
        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="0.4"
                      android:padding="@dimen/dp_10"
                      android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          style="@style/text_15_main"
                          android:text="内容"
                          android:layout_centerVertical="true"
                          android:id="@+id/tv_item_home_right_title"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          style="@style/text_11_white"
                          android:text="内容"
                          android:layout_marginLeft="@dimen/dp_6"
                          android:padding="@dimen/dp_4"
                          android:background="@drawable/gm_red_bg"
                          android:layout_toRightOf="@id/tv_item_home_right_title"
                          android:id="@+id/tv_item_home_right_type"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="内容"
                      android:layout_marginTop="@dimen/dp_10"
                      android:id="@+id/tv_item_home_right_content"
                      android:layout_height="wrap_content"
                      style="@style/text_12_fu"/>
            <ImageView android:layout_width="match_parent"
                       android:id="@+id/iv_item_right_content"
                       android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="0.6"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:padding="@dimen/dp_10"
                          android:layout_height="0dp">
                <RelativeLayout android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              style="@style/text_15_main"
                              android:text="内容"
                              android:id="@+id/tv_item_home_lift_one_title"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="内容"
                              android:layout_below="@id/tv_item_home_lift_one_title"
                              android:layout_marginTop="@dimen/dp_6"
                              android:id="@+id/tv_item_home_lift_one_content"
                              android:layout_height="wrap_content"
                              style="@style/text_12_fu"/>
                    <TextView android:layout_width="wrap_content"
                              style="@style/text_11_white"
                              android:text="内容"
                              android:layout_alignParentLeft="true"
                              android:layout_alignParentBottom="true"
                              android:padding="@dimen/dp_4"
                              android:background="@drawable/gm_red_bg"
                              android:id="@+id/tv_item_home_lift_one_type"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView android:layout_width="0dp"
                           android:layout_weight="1"
                           android:id="@+id/iv_home_lift_one"
                           android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:padding="@dimen/dp_10"
                          android:layout_marginTop="@dimen/dp_10"
                          android:layout_height="0dp">
                <RelativeLayout android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              style="@style/text_15_main"
                              android:text="内容"
                              android:id="@+id/tv_item_home_lift_two_title"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="内容"
                              android:layout_below="@id/tv_item_home_lift_two_title"
                              android:layout_marginTop="@dimen/dp_6"
                              android:id="@+id/tv_item_home_lift_two_content"
                              android:layout_height="wrap_content"
                              style="@style/text_12_fu"/>
                    <TextView android:layout_width="wrap_content"
                              style="@style/text_11_white"
                              android:text="内容"
                              android:layout_alignParentLeft="true"
                              android:layout_alignParentBottom="true"
                              android:padding="@dimen/dp_4"
                              android:background="@drawable/gm_red_bg"
                              android:id="@+id/tv_item_home_lift_two_type"
                              android:layout_height="wrap_content"/>

                </RelativeLayout>
                <ImageView android:layout_width="0dp"
                           android:layout_weight="1"
                           android:id="@+id/iv_item_home_lift_two"
                           android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  style="@style/margin_16"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="0dp"
                   android:scaleType="fitXY"
                   android:id="@+id/iv_home_seller_go"
                   android:src="@mipmap/jft_but_merchantentry"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:scaleType="fitXY"
                   android:id="@+id/iv_home_money_go"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:src="@mipmap/jft_but_bonusbenefits"
                   android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>