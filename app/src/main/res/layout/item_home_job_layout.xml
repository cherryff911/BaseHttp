<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="@dimen/dp_10"
                  android:background="@drawable/gm_circle_white_bg"
                  android:layout_marginBottom="@dimen/dp_10"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">
            <TextView android:layout_width="wrap_content"
                      style="@style/text_15_main"
                      android:textStyle="bold"
                      android:text="内容"
                      android:gravity="center_vertical"
                      android:id="@+id/tv_item_home_job_title"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="wrap_content"
                      style="@style/text_16_yellow"
                      android:text="内容"
                      android:gravity="center_vertical"
                      android:layout_alignParentRight="true"
                      android:id="@+id/tv_item_home_job_money"
                      android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent"
                  style="@style/text_12_fu"
                  android:text="公司"
                  android:id="@+id/tv_item_home_job_company"
                  android:layout_height="wrap_content"/>
        <com.backpacker.UtilsLibrary.view.FlowLayout
                android:id="@+id/fl_item_home_job_tag"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">
            <ImageView android:layout_width="@dimen/dp_24"
                       android:layout_centerVertical="true"
                       android:id="@+id/iv_item_home_job_hear"
                       android:layout_height="@dimen/dp_24"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_marginLeft="@dimen/dp_10"
                      style="@style/text_12_main"
                      android:text="2222222"
                      android:id="@+id/tv_item_home_job_name"
                      android:layout_centerVertical="true"
                      android:layout_toRightOf="@id/iv_item_home_job_hear"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>