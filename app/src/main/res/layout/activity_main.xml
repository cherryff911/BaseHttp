<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <FrameLayout
            android:layout_weight="1"
            android:id="@+id/fragment_main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    <RadioGroup
            android:id="@+id/rdg_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4">

        <RadioButton
                android:drawableTop="@drawable/select_main_home"
                android:id="@+id/rdb_select_home"
                style="@style/home_check_stype"
                android:checked="true"
                android:text="首页"/>

        <RadioButton
                android:drawableTop="@drawable/select_main_find"
                android:id="@+id/rdb_select_find"
                style="@style/home_check_stype"
                android:text="发现"/>

        <RadioButton
                android:drawableTop="@drawable/select_main_information"
                android:id="@+id/rdb_select_infom"
                style="@style/home_check_stype"
                android:text="消息"/>

        <RadioButton
                android:drawableTop="@drawable/select_main_me"
                android:id="@+id/rdb_select_me"
                style="@style/home_check_stype"
                android:text="我的"/>
    </RadioGroup>

</LinearLayout>